{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "lib": ["ES2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist/shared",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2019",
    "paths": {
      "@shared/*": ["./*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["./**/*.test.ts"]
}
